{
  "name": "ibsheet-angular-component",
  "version": "1.0.6",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "build": "ng build ibsheet-angular && yarn copy-package",
    "copy-package": "node scripts/copy-package.cjs",
    "postbuild": "shx cp projects/ibsheet-angular/README.md LICENSE CHANGELOG.md dist/ibsheet-angular/",
    "build:demo": "ng build demo",
    "test": "ng test ibsheet-angular",
    "lint": "ng lint",
    "lint:fix": "eslint . --ext .ts,.html --fix",
    "lint:test": "eslint \"**/*.{ts,tsx,js,jsx}\" && prettier \"**/*.{ts,js,json,css,scss,md,html}\" --list-different",
    "fix:eslint": "eslint \"**/*.{ts,tsx,js,jsx}\" --fix",
    "fix:prettier": "prettier \"**/*.{ts,js,json,css,scss,md,html}\" --write --list-different",
    "format": "prettier --write \"**/*.{ts,js,json,css,scss,md,html}\"",
    "pack:lib": "cd dist/ibsheet-angular && yarn npm pack",
    "publish:lib": "cd dist/ibsheet-angular && yarn npm publish",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:publish": "yarn release && cd dist/ibsheet-angular && npm publish --access public"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/platform-browser": "^20.0.0",
    "@angular/router": "^20.0.0",
    "@ibsheet/interface": "latest",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-eslint/builder": "^20.1.1",
    "@angular-eslint/eslint-plugin": "^20.1.1",
    "@angular-eslint/eslint-plugin-template": "^20.1.1",
    "@angular-eslint/template-parser": "^20.1.1",
    "@angular/build": "^20.1.3",
    "@angular/cli": "^20.0.5",
    "@angular/compiler-cli": "^20.0.0",
    "@types/jasmine": "~5.1.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@typescript-eslint/utils": "^8.39.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jasmine-core": "~5.7.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^20.1.0",
    "prettier": "^3.6.2",
    "shx": "^0.4.0",
    "standard-version": "^9.5.0",
    "typescript": "~5.8.2"
  }
}
